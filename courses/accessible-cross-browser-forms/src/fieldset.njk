<fieldset>
    <legend>Your Name</legend>
    <div class="form-row">
        <div class="form-group">
            <label for="first-name">First Name</label>
            <input class="form-field" type="text" id="first-name" name="first_name"/>
        </div>
        <div class="form-group">
            <label for="last-name">Last Name</label>
            <input class="form-field" type="text" id="last-name" name="last_name"/>
        </div>
     </div>
</fieldset>

<fieldset>
    <legend>Address</legend>
    <div class="form-row">
        <div class="form-group">
            <label for="street-address">Street Address</label>
            <input class="form-field" id="street-address" name="street-address" type="text" />
        </div>
    </div>
    <div class="form-row form-row--mixed">
        <div class="form-group">
            <label for="city">City</label>
            <input class="form-field" id="city" name="city" type="text" />
        </div>
        <div class="form-group">
            <label for="state">State</label>
            <input class="form-field" id="state" name="state" type="text" />
        </div>
        <div class="form-group form-group--width-auto">
            <label for="zip">Zip</label>
            <input class="form-field" id="zip" name="zip" type="text" />
        </div>
    </div>
</fieldset>